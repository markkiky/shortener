<div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
  <%= form_with(model: link, class: "needs-validation") do |form| %>
    <% if link.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold"> <%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</strong>
        <span class="block sm:inline">
          <ul>
            <% link.errors.full_messages.each do |error_message| %>
              <li><%= error_message %></li>
            <% end %>
          </ul>
        </span>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :url, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_area :url, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
    </div>

    <div class="mb-4">
      <%= form.label :short_code, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :short_code, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: false %>
    </div>

    <div class="mb-4">
      <%= form.label :expiry_date, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.date_field :expiry_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", min: Date.current.to_s, required: true %>
    </div>

    <div class="mb-4">
      <%= form.submit "Submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
