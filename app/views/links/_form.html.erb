  <% end %>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id %>
  </div>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_area :url %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :favicon, style: "display: block" %>
    <%= form.text_field :favicon %>
  </div>

  <div>
    <%= form.label :short_code, style: "display: block" %>
    <%= form.text_field :short_code %>
  </div>

  <div>
    <%= form.label :expiry_date, style: "display: block" %>
    <%= form.date_field :expiry_date %>
  </div>

  <div>
    <%= form.label :clicks, style: "display: block" %>
    <%= form.number_field :clicks %>
  </div>

  <div>
    <%= form.label :validated, style: "display: block" %>
    <%= form.check_box :validated %>
  </div>

  <div>
    <%= form.label :deleted, style: "display: block" %>
